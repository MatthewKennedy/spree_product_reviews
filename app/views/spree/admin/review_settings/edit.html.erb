<% content_for :page_title do %>
  <%= Spree.t(:review_settings, scope: :spree_reviews) %>
<% end %>

<%= form_tag admin_review_settings_path, method: :put do %>
  <div class="row">
    <div class="col-md-12" data-hook="reviews">
      <div class="checkbox">
        <%= label_tag :include_unapproved_reviews do %>
          <%= preference_field_tag :include_unapproved_reviews, SpreeProductReviews::Config[:include_unapproved_reviews], type: :boolean %>
          <%= Spree.t(:include_unapproved, scope: :spree_reviews) %>
        <% end %>
      </div>

      <div class="checkbox">
        <%= label_tag :track_locale do %>
          <%= preference_field_tag :track_locale, SpreeProductReviews::Config[:track_locale], type: :boolean %>
          <%= Spree.t(:track_locale, scope: :spree_reviews) %>
        <% end %>
      </div>

      <div class="form-group">
        <%= label_tag Spree.t(:preview_size, scope: :spree_reviews) %>
        <%= number_field_tag :preview_size, SpreeProductReviews::Config[:preview_size], class: 'form-control' %>
      </div>

      <div class="form-actions" data-hook="buttons">
        <%= button Spree.t('actions.update'), 'update' %>
      </div>
    </div>
  </div>
<% end %>
