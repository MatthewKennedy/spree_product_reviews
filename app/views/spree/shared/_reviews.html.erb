<div id="reviews">
  <h3 class="product-section-title"><%= Spree.t(:reviews) %></h3>

  <% if SpreeProductReviews::Config[:include_unapproved_reviews] == false && @product.reviews.approved.count == 0 %>
    <p class="reviews-none"><%= Spree.t(:no_reviews_available) %></p>
  <% else %>
    <%= render 'spree/shared/rating', product: @product, review: 0 %>
    <% for review in (SpreeProductReviews::Config[:track_locale] ? @product.reviews.localized(I18n.locale) : @product.reviews).default_approval_filter.preview %>
      <%= render 'spree/shared/review', review: review %>
    <% end %>
  <% end %>

  <% unless SpreeProductReviews::Config[:include_unapproved_reviews] == false and @product.reviews.approved.count == 0 %>
    <%= link_to Spree.t(:read_all_reviews), product_reviews_path(@product), class: 'btn btn-primary text-uppercase', rel: 'nofollow' %>
  <% end %>

  <%= link_to Spree.t(:write_your_own_review), new_product_review_path(@product), class: 'btn btn-primary text-uppercase', rel: 'nofollow' %>
</div>
